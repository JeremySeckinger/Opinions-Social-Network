<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Opinion Feed</title>
    <link rel="stylesheet" href="css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
  </head>
  <body>
    <h1>Opinions Feed</h1>
    <ul>
      <% allOpinions.forEach( opinionObj => { %>
      <li class="opinionItem" data-id="<%= opinionObj._id %>">
        <!-- <span><%= opinionObj.userId %></span> -->
        <span><%= opinionObj.opinion %></span>

        <span class="del far fa-trash-alt"> </span>
        <span class="fa fa-thumbs-up"><%= opinionObj.likes %></span>
      </li>
      <% }) %>
    </ul>
    <a href="/opinions">Post an Opinion</a>
    <a href="/logout">Logout</a>

    <script src="js/main.js"></script>
  </body>
</html>
